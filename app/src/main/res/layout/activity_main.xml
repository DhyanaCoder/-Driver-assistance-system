<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <ImageView
        android:id="@+id/background"
        android:src="@drawable/bgr"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/L1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context="com.example.thinkpad.adas11.MainActivity">

    <LinearLayout
        android:layout_marginBottom="12px"
        android:layout_marginLeft="32px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="400px"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="match_parent"
                android:layout_height="40px"
                android:layout_marginBottom="14px"
                android:background="#8000" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120px"
                android:layout_marginBottom="14px"
                android:orientation="vertical"
                android:background="#8000">
                <TextView
                    android:layout_marginTop="30px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="北"
                    android:textSize="30px"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/white"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="东"
                        android:textSize="30px"
                        android:textColor="@color/white"
                        android:layout_gravity="bottom"/>
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/zhinanzhen" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="西"
                        android:textSize="30px"
                        android:textColor="@color/white"
                        android:layout_gravity="bottom"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120px"
                android:background="#8000"
                android:orientation="horizontal">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bigrain"/>
                    <TextView
                        android:id="@+id/weather"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 广州 大雨 "
                        android:textSize="20dp"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:textColor="@color/white"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="26℃"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    />
                <LinearLayout
                    android:layout_marginLeft="170dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextClock

                        android:id="@+id/textClock1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="40dp"
                        android:format12Hour="HH:mm"
                        />
                    <TextClock

                        android:id="@+id/textClock2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:format12Hour="MM/dd EE"
                        />

                </LinearLayout>

                </LinearLayout>

        </LinearLayout>
<LinearLayout
    android:layout_marginTop="12px"
    android:orientation="vertical"
    android:layout_marginLeft="64px"
    android:layout_width="240px"
    android:layout_height="wrap_content">

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="144px"
        android:layout_marginBottom="8px"
         android:background="@drawable/daohangtop"
        android:orientation="vertical">


    </ImageButton>
    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="144px"
        android:background="@drawable/shexiangtop"
        android:orientation="vertical">


</ImageButton>
    </LinearLayout>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="240px"
    android:layout_marginLeft="16px"
    android:layout_marginTop="14px"
    android:layout_marginRight="32px"
    android:layout_height="wrap_content">

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="144px"
        android:layout_marginBottom="8px"
        android:background="@drawable/musictop"
        android:orientation="vertical">


    </ImageButton>
    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="144px"
        android:background="@drawable/fuzhujiashitop"
        android:orientation="vertical">


    </ImageButton>
</LinearLayout>
    </LinearLayout>
<LinearLayout
android:background="#8000"
    android:orientation="horizontal"
    android:layout_marginBottom="18px"
    android:layout_width="match_parent"
    android:layout_height="216px">
    <ImageButton
        android:layout_marginLeft="32px"
        android:layout_marginTop="18px"
        android:background="@drawable/pinaojiashibottom"
        android:orientation="vertical"
        android:layout_width="300px"
        android:layout_height="180px">

    </ImageButton>
    <ImageButton
        android:layout_marginTop="18px"
        android:layout_marginLeft="30px"
        android:background="@drawable/shexiangbottom"
        android:orientation="vertical"
        android:layout_width="300px"
        android:layout_height="180px">

    </ImageButton>
    <ImageButton
        android:layout_marginTop="18px"
        android:layout_marginLeft="30px"
        android:background="@drawable/daohangbottom"
        android:orientation="vertical"
        android:layout_width="300px"
        android:layout_height="180px">

    </ImageButton>
</LinearLayout>
</LinearLayout>
</FrameLayout>